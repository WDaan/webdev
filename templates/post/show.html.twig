{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
<div class="container">
    <h2>Post</h2>
    <table class="table table-show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ post.user }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row" style="max-width: 300px; margin: 20px auto;">
        <div class="col">
            <a class="btn btn-success" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <div class="col">
            {{ include('post/_delete_form.html.twig') }}
        </div>
        {% endif %}
    </div>

    <a style="margin-top: 30px;"  class="btn btn-primary" href="{{ path('post_index') }}">back to list</a>

    </div>
{% endblock %}
