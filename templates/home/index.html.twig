{% extends 'base.html.twig' %}
{% block body %}
<div class="container" style="margin-top:50px;">
    <h1>Welcome to this messageboard!</h1>

    <h5>These messages were posted:</h5>
    <div class="card-row row">
        {% for post in posts %}
        <div class="col-sm col-xs ">
        <div class="card">
            <div class="card-inner">
                <div class="card-title">{{ post.content }}</div>
                <div class="card-value">{{ post.user }}</div>
            </div>
        </div>
        </div>
        {% else %}
            <div>
                <div colspan="6">no records found</div>
            </div>
        {% endfor %}
        </div>
         <a style="margin-top: 50px;" class="btn btn-primary" href="{{ path('post_new') }}">Create new</a>
</div>
{% endblock %}
